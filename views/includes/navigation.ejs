<div class="backdrop"></div>
<header class="main-header">
  <button id="side-menu-toggle">Menu</button>
  <nav class="main-header__nav">
    <div class="main-header__item-list">
      <div class="main-header__item">
        <a class="<%= path === '/' ? 'active' : '' %>" href="/">Shop</a>
      </div>
      <div class="main-header__item">
				<a class="<%= path === '/products' ? 'active' : '' %>" href="/products">
					Products
				</a>
      </div>
      <div class="main-header__item">
				<a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart">
					Cart
				</a>
      </div>
      <div class="main-header__item">
        <a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders">
					Orders
        </a>
			</div>
			<% if (isAuthenticated) { %>
       <div class="main-header__item">
				<a 
					class="<%= path === '/admin/add-product' ? 'active' : '' %>" 
					href="/admin/add-product">Add Product</a>
			</div>
			<div class="main-header__item">
				<a 
					class="<%= path === '/admin/products' ? 'active' : '' %>" 
					href="/admin/products">Admin Product</a>
			</div> 
		 <% } %>
		</div>
		<div class="main-header__item-list">
			<div class="main-header__item">
				<a class="<%= path === '/login' ? 'active' : '' %>" href="/login">
					Login
				</a>
			</div>
			<div class="main-header__item-list">
				<form action="/logout" method="POST">
					<button class="btn" type="submit">Logout</button>
				</form>
			</div>
		</div> 
  </nav>
</header>
